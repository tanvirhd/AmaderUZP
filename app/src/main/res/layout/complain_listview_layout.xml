<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="11"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="অভিযোগ বিবরন"
            android:textSize="13dp"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:textAlignment="center"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="বরাবরঃ "
                android:textSize="12dp" />
            <TextView
                android:id="@+id/tvdoptor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="বরাবর "
                android:textSize="12dp"
                android:paddingLeft="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="বিষয়ঃ "
                android:textSize="12dp" />
            <TextView
                android:id="@+id/tvtopic"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="অভিযোগের বিষয়ঃ "
                android:textSize="12dp"
                android:paddingLeft="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="বিবরনঃ "
                android:textSize="12dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="অভিযোগের বিষয়ঃ "
                android:textSize="12dp"
                android:id="@+id/tvdetails"
                android:paddingLeft="5dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="ব্যক্তিগত তথ্য"
            android:textSize="13dp"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="নামঃ "
                android:textSize="12dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="অভিযোগের বিষয়ঃ "
                android:textSize="12dp"
                android:id="@+id/tvName"
                android:paddingLeft="5dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="বর্তমান ঠিকানাঃ "
                android:textSize="12dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="অভিযোগের বিষয়ঃ "
                android:textSize="12dp"
                android:id="@+id/tvPresentAdd"
                android:paddingLeft="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="স্থায়ী ঠিকানাঃ "
                android:textSize="12dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="অভিযোগের বিষয়ঃ "
                android:textSize="12dp"
                android:paddingLeft="5dp"
                android:id="@+id/tvpermanentAdd" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="ইমেইলঃ "
                android:textSize="12dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="অভিযোগের বিষয়ঃ "
                android:textSize="12dp"
                android:paddingLeft="5dp"
                android:id="@+id/tvEmail" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="মোবাইল নাম্বারঃ "
                android:textSize="12dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="অভিযোগের বিষয়ঃ "
                android:textSize="12dp"
                android:id="@+id/tvPhn"
                android:paddingLeft="5dp" />
        </LinearLayout>






    </LinearLayout>

</android.support.constraint.ConstraintLayout>