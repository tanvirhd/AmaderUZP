<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mdtan.amaderuzp.AuthActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/email_et_xml"
                android:layout_width="300dp"
                android:layout_height="wrap_content"

                android:layout_gravity="center_horizontal"
                android:hint="Enter Email Address" />

            <EditText
                android:id="@+id/pass_et_xml"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email_et_xml"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:hint="Enter password"
                android:inputType="numberPassword" />

            <Button
                android:id="@+id/btn_login_xml"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/pass_et_xml"
                android:layout_alignRight="@+id/pass_et_xml"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:text="LogIn" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">


                        <!--<ListView
                           android:background="@color/red"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:id="@+id/badboy_listview">

                       </ListView>-->


        </LinearLayout>


    </LinearLayout>

</LinearLayout>
